<UserControl x:Class="Chat.UserControlMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chat"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="grid">
        <Border x:Name="messageColor" Background="#FF1D8CD8" CornerRadius="15 15 0 15" Margin=" 10 12">
            <TextBlock  x:Name="messageText" Margin="15" TextWrapping="Wrap" Text=" EJEMPLO" FontSize="10"/>
        </Border>
        <TextBlock x:Name="senderName" Text="Mengano Sultancio" Margin="25,10,0,0" Foreground="White" ></TextBlock>
    </Grid>
</UserControl>
